{
  "name": "bolt",
  "version": "0.18.3",
  "main": "index.js",
  "author": "James Kyle <me@thejameskyle.com>",
  "license": "MIT",
  "repository": "https://github.com/boltpkg/bolt",
  "bin": {
    "bolt": "./bin.js"
  },
  "files": [
    "dist",
    "index.js",
    "bin.js"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "flow": "flow status",
    "test": "jest --coverage",
    "format": "prettier --write src/**/*.js",
    "build:legacy": "BABEL_ENV=legacy babel src -d dist/legacy",
    "build:modern": "BABEL_ENV=modern babel src -d dist/modern",
    "build": "yarn run clean && yarn build:legacy && yarn build:modern",
    "prepublish": "yarn build",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "^0.51.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "jest-expect-contain-deep": "^1.0.1",
    "jest-fixtures": "^0.5.0",
    "lint-staged": "^4.1.3",
    "mode-to-permissions": "^0.0.2",
    "path-exists": "^3.0.0",
    "prettier": "^1.6.1"
  },
  "dependencies": {
    "array-includes": "^3.0.3",
    "babel-runtime": "^6.25.0",
    "chalk": "^2.0.1",
    "clean-stack": "^1.3.0",
    "cmd-shim": "^2.0.2",
    "cross-spawn": "^5.1.0",
    "detect-indent": "^5.0.0",
    "find-up": "^2.1.0",
    "globby": "^6.1.0",
    "is-glob": "^4.0.0",
    "make-dir": "^1.0.0",
    "meow": "^4.0.0",
    "minimatch": "^3.0.4",
    "multimatch": "^2.1.0",
    "p-limit": "^1.1.0",
    "parse-json": "^2.2.0",
    "path-is-inside": "^1.0.2",
    "pkg-up": "^2.0.0",
    "project-bin-path": "^1.1.0",
    "read-cmd-shim": "^1.0.1",
    "read-pkg": "^2.0.0",
    "rimraf": "^2.6.1",
    "semver": "^5.4.1",
    "sort-object": "^3.0.2",
    "task-graph-runner": "^1.0.1",
    "typeable-promisify": "^2.0.1",
    "yarn": "^1.3.2"
  },
  "jest": {
    "resetMocks": true,
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
